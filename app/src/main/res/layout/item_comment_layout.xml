<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!--name content date photo-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_uesr_photo_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nopic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/comment_uesr_photo_view"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/comment_user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:text="123"
            />

        <TextView
            android:id="@+id/comment_content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/comment_user_name_view"
            android:text="123"
            />

        <TextView
            android:id="@+id/comment_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_cccccc"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/comment_content_view"
            android:text="123"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_normal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/comment_date_view"/>


    </RelativeLayout>

</RelativeLayout>