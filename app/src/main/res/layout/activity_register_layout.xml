<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/register_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_register_titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/register_back_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/title_close_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/register"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/register_back_view"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/color_333333"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_register_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rl_register_titlebar"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/register_input_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="57dp"
                    android:hint="@string/register_account"
                    android:maxLines="1"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_bfbfbf"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register_input_username"
                    android:layout_marginTop="22dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_bfbfbf"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_input_conpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register_input_password"
                    android:layout_marginTop="22dp"
                    android:hint="@string/register_conpassword"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_bfbfbf"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/register_button_view"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/register_input_conpassword"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/color_c9141d"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textSize="16sp" />


            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>