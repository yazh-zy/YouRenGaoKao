<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/online_listview_imageview"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/online_listview_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/online_subject_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/online_length_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/account" />

        <TextView
            android:id="@+id/online_content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_below="@+id/online_subject_view"
            android:text="1111111111111111111111111111111111111111111"
            />

        <TextView
            android:id="@+id/online_author_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_below="@+id/online_content_view"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:layout_marginTop="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/online_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/online_content_view"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>



</RelativeLayout>